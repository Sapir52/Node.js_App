<!DOCTYPE html>
<html>

<head>
	<title>All Users App</title>
	<%- include('\head.ejs'); %>
</head>



<body>
	<div class="col-md-4 col-md-offset-4 form-card">
		<div>
			<p>All Users</p>
		</div>
		<div>
			<center>
				<table class="table table-hover text-center">
					<tr> 
						<th> email </th> 
						<th> username </th> 
						<th> address </th>         
				   </tr> 
			 
			   
			 
				   <% users.forEach(user => { %> 
			 
						<tr>  
							<td> <%= user.email %> 
							<td> <%= user.username %>
							<td> <%= user.address %>
							<td><form action="/deleteUser/<%= user._id %>"><button class="btn btn-danger">Delete</button></form></td>
							<td><form action="/updateUser/<%= user._id %>"><button class="btn btn-secondary">Update</button></form></td>
						</tr> 

				   <% }); %>  
  
				</table>
			</center>
		</div>
		<td><a href="/createUser" class="btn btn-info" role="button">New User</a></td>
		<div class="abc" id="LangTable">
			<a href="/logout">Logout</a>
		</div>


	</div>
</body>

</html>